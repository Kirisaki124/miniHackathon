</head>

<body>
    <table id="table">
        <tr>
            <th></th>
            <th>{{player1}}</th>
            <th>{{player2}}</th>
            <th>{{player3}}</th>
            <th>{{player4}}</th>
        </tr>
        <tr>
            <th>Sum of score</th>
            <th id="player1Score"></th>
            <th id="player2Score"></th>
            <th id="player3Score"></th>
            <th id="player4Score"></th>
        </tr>
    </table>
    <button id="add">ADD ROUND</button>
</body>

<script>
    var counter = 1
    var id = 0
    $("#add").click(function(){
        var add = "<tr>"
        add += `<td>Round ${counter}</td>`
        for (var i = 0; i < 4; i++){
            add += `<td><input type='number' id="${id}">` + "</td>"
            id ++
        }
        counter ++;
        add += "</tr>"
        $("#table").append(add)

        

        
    })

</script>

</html>