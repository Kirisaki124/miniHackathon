    <script src="js/main.js"></script>

</head>

<body>
    <form id="form">
        <input type="text" id="first-input" placeholder="Player 1">
        <input type="text" id="second-input" placeholder="Player 2">
        <input type="text" id="third-input" placeholder="Player 3">
        <input type="text" id="fourth-input" placeholder="Player 4">
        <button id="create">Create new game</button>
    </form>

</body>

<script>
    $("#form").submit(function (e) {
        e.preventDefault();
        $.ajax({
            url: '/api/score',
            type: 'POST',
            data: {
                player1: $("#first-input").val(),
                player2: $("#second-input").val(),
                player3: $("#third-input").val(),
                player4: $("#fourth-input").val()
            },
            success: function (response) {
                console.log("Success", response);
                if (response.success) window.location.href = `/game/${response.gameId}`;
            }, error: function (response) {
                console.log("Error", response);
            }
        })
    })

</script>

</html>